<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controllers.UserController">
    <Label text="User Panel - Conforming Reservations"/>
    <TableView fx:id="reservationTable" prefHeight="200" prefWidth="400">
        <columns>
            <TableColumn text="ID" fx:id="idColumn" prefWidth="50"/>
            <TableColumn text="Status" fx:id="statusColumn" prefWidth="100"/>
        </columns>
    </TableView>
    <Button text="Proceed to Payment" onAction="#navigateToPayment"/>
</VBox>